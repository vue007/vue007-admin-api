    <update id="update" parameterType="com.vue007.admin.model.user.UserAudit">
        UPDATE
        <include refid="Table_Name" />
        <set>
            <if test="nickname != null and nickname != ''">
                nickname = #{nickname},
            </if>
            <if test="headImg != null and headImg != ''">
                head_img = #{headImg},
            </if>
            <if test="updateUser != null and updateUser != ''">
                update_user = #{updateUser},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="status >= 0 ">
                status = #{status},
            </if>
        </set>
        WHERE
          audit_id = #{id}
    </update>

    <delete id="deleteById" parameterType="String">
      DELETE FROM
        <include refid="Table_Name" />
      WHERE
        audit_id = #{id}
    </delete>

    <delete id="deleteDuplicate" parameterType="com.vue007.admin.model.user.UserAudit">
        DELETE FROM
          <include refid="Table_Name" />
        WHERE
        <![CDATA[
            user_id = #{userId}
          AND
            type = #{type}
          AND
            create_time < #{createTime}
