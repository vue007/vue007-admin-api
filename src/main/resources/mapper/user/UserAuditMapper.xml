    <resultMap id="userAuditMap" type="com.vue007.admin.model.user.UserAudit">
        <id property="id" column="audit_id"/>
        <result property="nickname" column="nickname"/>
        <result property="headImg" column="head_img"/>
        <result property="userId" column="user_id"/>
        <result property="type" column="type" jdbcType="TINYINT" />

        <result property="status" column="status" jdbcType="TINYINT" />
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateUser" column="update_user" />
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>

        <result property="userNickname" column="user_nickname" />
    </resultMap>

    <sql id="Table_Name">
        bbs_user_audit
    </sql>

    <sql id="Base_Column_List">
        a.audit_id,
        a.user_id,
        a.nickname,
        a.head_img,
        a.type,
        a.status,
        a.update_user,
        a.update_time,
        a.create_time
    </sql>

    <select id="findPage" parameterType="com.vue007.admin.model.user.UserAudit" resultMap="userAuditMap">
        <if test="status == 99 or status > 0">
            SELECT
              <include refid="Base_Column_List" />,
              u.nickname AS user_nickname
            FROM
              <include refid="Table_Name" /> a
            LEFT JOIN
              bbs_user u
            ON
              a.user_id = u.user_id
            <where>
                a.status != 0
                <if test="status > 0">
                    AND a.status = #{status}
                </if>
                <if test="keywords != null and keywords != ''">
                    AND
                    (
                      u.nickname LIKE CONCAT('%', #{keywords},'%')
                        <if test="type == 2">
                            OR a.nickname LIKE CONCAT('%', #{keywords},'%')
                        </if>
                    )
                </if>
                <if test="type > 0">
                    AND a.type = #{type}
                </if>
            </where>
        </if>

        <if test="status == 99">
            UNION ALL
        </if>

        <if test="status == 0 or status == 99">
            SELECT
              <include refid="Base_Column_List" />,
              u.nickname AS user_nickname
            FROM
            (
                SELECT
                    b.*
                FROM
                    <include refid="Table_Name" /> b
                WHERE
                    (
                    SELECT
                      count(1)
                    FROM
                      <include refid="Table_Name" />
                    WHERE
                        status = b.status
                        AND type = b.type
                        AND user_id = b.user_id
                        AND create_time > b.create_time
                ) = 0
            ) AS a
            LEFT JOIN
              bbs_user u
            ON
              a.user_id = u.user_id
            <where>
                a.status = 0
                <if test="keywords != null and keywords != ''">
                    AND
                    (
                      u.nickname LIKE CONCAT('%', #{keywords},'%')
                        <if test="type == 2">
                            OR a.nickname LIKE CONCAT('%', #{keywords},'%')
                        </if>
                    )
                </if>
                <if test="type > 0">
                    AND a.type = #{type}
                </if>
            </where>
        </if>
        ORDER BY
          create_time DESC
    </select>

